{% if product.visible == true %}
    <table cellpadding="0" cellspacing="0" border="0" align="center" style="background: #9E9E9E; color: #ffffff;">
        <tr>
            <td valign="top" width="400" style="padding: 5px 10px;">
                <a href="{{ product.url }}" target="_blank" style="color: #ffffff; text-decoration: underline">{{ product.name }}</a>
            </td>
            <td valign="middle" width="200" align="right" style="padding: 5px 10px;">{{ product.lastPrice|number_format(2, ',', '') }}€ @ {{ product.lastPriceStore }}</td>
        </tr>
    </table>
    <br />
    <table cellpadding="0" cellspacing="0" border="0" align="center" style="border-bottom: solid 1px #9E9E9E; background: #ffffff">
        <tr>
            <td valign="top" width="150">
                <img width="150" src="{{ product.imageUrl }}" alt="{{ product.name }}"/>
            </td>
            <td valign="top" width="450" align="right">
                <br />
                <br />
                <table cellpadding="0" cellspacing="0" border="0" align="center" width="450">
                    <tr>
                        <td align="right">Highest:</td>
                        <td align="right">{{ product.highestPriceDate|date("Y/m/d") }}</td>
                        <td align="right">{{ product.highestPriceStore }}</td>
                        <td align="right" style="padding-right: 10px;">{{ product.highestPrice|number_format(2, ',', '') }}€</td>
                    </tr>
                    <tr>
                        <td align="right">Lowest:</td>
                        <td align="right">{{ product.lowestPriceDate|date("Y/m/d") }}</td>
                        <td align="right">{{ product.lowestPriceStore }}</td>
                        <td align="right" style="padding-right: 10px;">{{ product.lowestPrice|number_format(2, ',', '') }}€</td>
                    </tr>
                    <tr>
                        <td align="right">&nbsp;</td>
                        <td align="right">&nbsp;</td>
                        <td align="right">Average:</td>
                        <td align="right" style="padding-right: 10px;">{{ product.averagePrice|number_format(2, ',', '') }}€</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <br />
{% endif %}